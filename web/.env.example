# ============================================
# LiveKit Configuration (REQUIRED)
# ============================================
# Get these from your LiveKit Cloud dashboard
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project-subdomain.livekit.cloud

# ============================================
# API Connection Endpoint (REQUIRED)
# ============================================
# For DEVELOPMENT (localhost):
NEXT_PUBLIC_CONN_DETAILS_ENDPOINT=http://localhost:8019/api/connection-details

# For PRODUCTION (cloud deployment):
# NEXT_PUBLIC_CONN_DETAILS_ENDPOINT=https://your-api-domain.com/api/connection-details

# ============================================
# Optional: OpenAI Configuration
# ============================================
OPENAI_API_KEY=your_openai_key_here

# ============================================
# Optional: Internal Variables
# ============================================
NEXT_PUBLIC_APP_CONFIG_ENDPOINT=
